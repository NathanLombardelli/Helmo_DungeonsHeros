@page
@model LoginModel

@{
    ViewData["Title"] = "Dungeon's Heros";
}
<div class="d-flex justify-content-center align-items-center min-vh-100 flex-column">
    <h1 class="titre">@ViewData["Title"]</h1>



    <form id="account" method="post">

        <div class="fs-2 d-flex justify-content-center red" asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="decalageConnection ">
            <p class="h2" asp-for="Input.Email">Nom du Heros / Email</p>
            <input asp-for="Input.Email" class="inputConnection" autocomplete="Email" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-danger ms-3 fs-2"></span>
        </div>


        <div class="d-flex mb-4 ms-5">
            <p class="h2" asp-for="Input.Password">Mot de passe</p>
            <input asp-for="Input.Password" class="inputConnection" autocomplete="current-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-danger ms-3 fs-2"></span>
        </div>


        <div class="checkbox">
            <label asp-for="Input.RememberMe" class="form-label fs-2">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>


        <div class="d-flex ms-5 mb-5">
            <a class="roundButton" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">s'enregistrer</a>
            <button class="roundButton" onclick="this.closest('form').submit();return false;">se connecter</button>
        </div>


        <div>
            <p>
                <a class="h3" id="forgot-password" asp-page="./ForgotPassword">Forgot your password ?</a>
            </p>
            <p>
                <a class="h3" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>
        </div>

    </form>



</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

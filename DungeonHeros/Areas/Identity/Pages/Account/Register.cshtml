@page
@model RegisterModel
@{
    ViewData["Title"] = "Dungeon's Heros";
    var classeList = Enum.GetValues(typeof(Classe)).Cast<Classe>();
    var RaceList = Enum.GetValues(typeof(Race)).Cast<Race>();
}



<div class="d-flex justify-content-center align-items-center min-vh-100 flex-column">
    <h1 class="titreConnection">@ViewData["Title"]</h1>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="inputFormulaire">
            <div class="form-floating">
                <input asp-for="Input.Email" class="inputConnection" autocomplete="Email" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger ms-3 fs-2"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="inputConnection" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger ms-3 fs-2"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="inputConnection" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger ms-3 fs-2"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.DateOfBirth" class="inputConnection" type="date" autocomplete="DateOfBirth" aria-required="true" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger ms-3 fs-2"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.NomHero" class="inputConnection" autocomplete="Nom du Hero" aria-required="true" />
                <span asp-validation-for="Input.NomHero" class="text-danger ms-3 fs-2"></span>
            </div>

            <div class="form-floating">
                <select asp-items="Html.GetEnumSelectList<Classe>()" asp-for="Input.Classe" class="inputConnection">
                </select>
                <span asp-validation-for="Input.Classe" class="text-danger ms-3 fs-2"></span>
            </div>

            <div class="form-floating">
                <select asp-items="Html.GetEnumSelectList<Race>()" asp-for="Input.Race" class="inputConnection">
                </select>
                <span asp-validation-for="Input.Race" class="text-danger ms-3 fs-2"></span>
            </div>
        </div>

        <div class="nomInput">
            <p class="h2" asp-for="Input.Email">Adresse email</p>
            <p class="h2" asp-for="Input.Password">Mot de passe</p>
            <p class="h2" asp-for="Input.ConfirmPassword">Confirmation du Mot de passe</p>
            <p class="h2" asp-for="Input.DateOfBirth">Date de naissance</p>
            <p class="h2" asp-for="Input.NomHero">Nom du Heros</p>
            <p class="h2" asp-for="Input.NomHero">Classe du Heros</p>
            <p class="h2" asp-for="Input.NomHero">Race du Heros</p>
        </div>

        <button id="registerSubmit" type="submit" class="roundButton">Register</button>
    </form>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
